{
  extends: [
    'github>camptocamp/gs-renovate-config-preset:base.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:group.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:ci.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:preset.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:pre-commit.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:docker.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:json-schema.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:shellcheck.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:python.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:stabilization-branches.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:own.json5#1.5.0',
    'github>camptocamp/gs-renovate-config-preset:security.json5#1.5.0',
  ],
  baseBranchPatterns: ['3.4', '3.5', 'master'],
  html: {
    managerFilePatterns: ['/\\.html?$/', '/\\.html?.mako$/'],
  },
  packageRules: [
    /** Docker images versioning */
    {
      matchDatasources: ['docker'],
      versioning: 'loose',
    },
    {
      matchFiles: ['acceptance_tests/Dockerfile', 'app/Dockerfile'],
      matchDatasources: ['docker'],
      versioning: 'ubuntu',
    },
    {
      matchDatasources: ['docker'],
      versioning: 'regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$',
      matchDepNames: ['redis'],
    },
    /** Disable upgrading the supported Python version */
    {
      matchFileNames: ['app/pyproject.toml', 'acceptance_tests/pyproject.toml'],
      enabled: false,
      matchDepNames: ['python'],
    },
    /** Packages published very recently are not pushed to stabilization branches for security reasons */
    {
      matchBaseBranches: ['/^[0-9]+\\.[0-9]+$/'],
      minimumReleaseAge: '7 days',
    },
  ],
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
}
